<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ineasnet.shanghaiguidao2.activity.StartActivity" >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="2.5"
         android:orientation="vertical">

          <ImageView
              android:id="@+id/iv_start_icon"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:src="@drawable/app_logo"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/iv_start_icon"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="13dp"
              android:text="企业标准化APP"
              android:textColor="#0089DF"
              android:textSize="22sp"
              android:textStyle="bold" />
     </RelativeLayout>

     <LinearLayout
         android:layout_weight="5"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:orientation="vertical">

          <ImageView
              android:id="@+id/iv_start_center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="44dp"
              android:layout_marginLeft="100dp"
              android:layout_marginRight="100dp"
              android:src="@drawable/start_center_new" />
     </LinearLayout>
     <LinearLayout
         android:layout_weight="1.5"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:orientation="vertical">

          <ImageView
              android:id="@+id/imageView2"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="120dp"
              android:src="@drawable/start_bottom" />
     </LinearLayout>







</LinearLayout>

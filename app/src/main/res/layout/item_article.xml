<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="110dp">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_article_id"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:text="文号："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_article_docNum"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:text="企标号："/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:singleLine="true"
            android:id="@+id/tv_article_name"
            android:layout_marginTop="5dp"
            android:text="Pile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_article_new"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:text="已下载"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_article_null"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:text="未下载"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_article_update"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:text="待更新"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/article_wait"/>
    </RelativeLayout>
</LinearLayout>